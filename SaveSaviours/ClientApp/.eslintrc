{
  "env": {
    "browser": true,
    "jest": true,
    "es6": true
  },
  "plugins": ["import", "react-hooks"],
  "extends": ["airbnb"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "allowImportExportEverywhere": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"]
      }
    }
  },
  "rules": {
    "semi": ["error", "never"],
    "no-console": "warn",
    "no-eval": "error",
    "max-len": [2, {"code": 120}],
    "import/first": "error",
    "linebreak-style": 0,
    "no-nested-ternary": 0,
    "no-plusplus": 0,
    "radix": 0,
    "react/jsx-filename-extension": [1, { "extensions": [".js"] }],
    "react-hooks/rules-of-hooks": "warn",
    "react-hooks/exhaustive-deps": "warn",
    "import/prefer-default-export": "off",
    "import/no-named-as-default": "off"
  }
}
